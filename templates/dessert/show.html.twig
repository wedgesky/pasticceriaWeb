{% extends 'base.html.twig' %}

{% block title %}Dessert featured{% endblock %}

{% block body %}
    <div class="container">
        <h1>Dessert featured</h1>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>DateSell</th>
            </tr>
            </thead>
            <tbody>
            {% for dessert in desserts %}
                <tr>
                    <td scope="col">{{ dessert.name }}</td>
                    <td scope="col">{{ dessert.price }}</td>
                    <td scope="col">{{ dessert.dateSell ? dessert.dateSell|date('Y-m-d') : '' }}</td>
                </tr>
            {% else %}
                <tr>
                    <td scope="col" colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
